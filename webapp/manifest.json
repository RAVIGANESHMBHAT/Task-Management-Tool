{
  "_version": "1.21.0",
  "sap.app": {
    "id": "com.ravi.dissertation.TaskManagementTool",
    "type": "application",
    "i18n": "i18n/i18n.properties",
    "applicationVersion": {
      "version": "1.0.0"
    },
    "title": "{{appTitle}}",
    "description": "{{appDescription}}",
    "dataSources": {
      "taskManagementRemote": {
        "uri": "/here/goes/your/serviceUrl/",
        "type": "OData",
        "settings": {
          "odataVersion": "2.0",
          "localUri": "localService/metadata.xml"
        }
      },
      "userModel": {
        "uri": "localService/mockdata/Users.json",
        "type": "JSON"
      },
      "reportModel": {
        "uri": "localService/mockdata/UserBurndownData.json",
        "type": "JSON"
      }
    }
  },
  "sap.ui": {
    "technology": "UI5",
    "icons": {
      "icon": "",
      "favIcon": "",
      "phone": "",
      "phone@2": "",
      "tablet": "",
      "tablet@2": ""
    },
    "deviceTypes": {
      "desktop": true,
      "tablet": true,
      "phone": true
    }
  },
  "sap.ui5": {
    "flexEnabled": true,
    "rootView": {
      "viewName": "com.ravi.dissertation.TaskManagementTool.view.FlexibleColumnLayout",
      "type": "XML",
      "async": true,
      "id": "fcl"
    },
    "dependencies": {
      "minUI5Version": "1.60.0",
      "libs": {
        "sap.ui.core": {},
        "sap.m": {},
        "sap.ui.layout": {}
      }
    },
    "contentDensities": {
      "compact": true,
      "cozy": true
    },
    "models": {
      "i18n": {
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleName": "com.ravi.dissertation.TaskManagementTool.i18n.i18n"
        }
      },
      "userModel": {
        "type": "sap.ui.model.json.JSONModel",
        "dataSource": "userModel"
      },
      "reportModel": {
        "type": "sap.ui.model.json.JSONModel",
        "dataSource": "reportModel"
      },
      "taskManagement": {
        "dataSource": "taskManagementRemote"
      },
      "projectModel": {
        "type": "sap.ui.model.json.JSONModel"
      },
      "masterTaskManagementModel": {
        "type": "sap.ui.model.json.JSONModel"
      },
      "createTaskModel": {
        "type": "sap.ui.model.json.JSONModel"
      },
      "viewModel": {
        "type": "sap.ui.model.json.JSONModel"
      }
    },
    "resources": {
      "css": [
        {
          "uri": "css/style.css"
        }
      ]
    },
    "routing": {
      "config": {
        "routerClass": "sap.m.routing.Router",
        "viewType": "XML",
        "viewPath": "com.ravi.dissertation.TaskManagementTool.view",
        "controlId": "fcl",
        "controlAggregation": "pages",
        "async": true
      },
      "routes": [
        {
          "pattern": ":layout:",
          "name": "login",
          "target": [
            "login"
          ]
        },
        {
          "pattern": "detail/{layout}/{userName}",
          "name": "detail",
          "target": [
            "detail"
          ]
        }
      ],
      "targets": {
        "login": {
          "viewName": "Login",
          "controlAggregation": "beginColumnPages"
        },
        "detail": {
          "viewName": "Detail",
          "controlAggregation": "beginColumnPages"
        }
      }
    }
  }
}
